{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"lib": ["ESNext", "DOM"],
		"moduleResolution": "bundler",
		"strict": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"paths": {
			"@/*": ["./src/*"],
			"@components/*": ["./src/components/*"],
			"@helpers/*": ["./src/helpers/*"],
			"@public/*": ["./public/*"],
			"@assets/*": ["./src/assets/*"],
			"@styles/*": ["./src/assets/css/*"]
		}
	},
	"include": ["./src"]
}
